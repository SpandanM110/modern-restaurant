---
import Layout from '../layouts/Layout.astro';
import ReservationForm from '../components/ReservationForm.astro';
---

<Layout title="Reservations - Savoria">
  <div class="container mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold text-center mb-8">Make a Reservation</h1>
    <p class="text-center text-gray-600 mb-12">
      Reserve your table for a memorable dining experience
    </p>
    
    <ReservationForm />
    
    <div class="mt-12 text-center">
      <p class="text-gray-600">
        For parties larger than 10 or special events, please call us at (555) 123-4567
      </p>
    </div>
  </div>
</Layout>