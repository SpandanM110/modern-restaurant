---
import Layout from '../layouts/Layout.astro';

// Feature items data
const features = [
  {
    title: "Fine Dining",
    description: "Experience culinary excellence with our expertly crafted dishes.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-4 text-orange-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
    </svg>`
  },
  {
    title: "Premium Bar",
    description: "Enjoy our selection of fine wines and signature cocktails.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-4 text-orange-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M18 6L6 18M6 6l12 12"/>
      <circle cx="12" cy="12" r="10"/>
    </svg>`
  },
  {
    title: "Private Events",
    description: "Host your special occasions in our elegant private dining rooms.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-4 text-orange-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
    </svg>`
  }
];
---

<Layout title="Savoria - Modern Restaurant">
  <!-- Hero Section with Parallax Effect -->
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 to-black/50 z-10"></div>
      <div class="absolute inset-0 bg-[url('/background.svg')] bg-cover bg-center bg-no-repeat"></div>
    </div>
    <div class="relative z-20 container mx-auto px-6 text-center text-white">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 opacity-0 animate-fadeDown">
        Welcome to Savoria
      </h1>
      <p class="text-xl md:text-2xl mb-12 opacity-0 animate-fadeUp">
        Experience fine dining at its finest
      </p>
      <div class="space-x-6 opacity-0 animate-fadeIn">
        <a 
          href="/menu" 
          class="inline-block bg-orange-500 text-white px-8 py-3 rounded-full hover:bg-orange-600 transition-all duration-300 hover:scale-105"
        >
          Explore Menu
        </a>
        <a 
          href="/reservations" 
          class="inline-block bg-transparent border-2 border-white text-white px-8 py-3 rounded-full hover:bg-white hover:text-black transition-all duration-300 hover:scale-105"
        >
          Book a Table
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 bg-gray-50">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-16">Our Specialties</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        {features.map(feature => (
          <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
            <div class="text-center">
              <Fragment set:html={feature.icon} />
              <h3 class="text-xl font-semibold mb-4">{feature.title}</h3>
              <p class="text-gray-600 leading-relaxed">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gray-900 text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-8">Experience Luxury Dining</h2>
      <p class="text-xl mb-12 text-gray-300 max-w-2xl mx-auto">
        Join us for an unforgettable culinary journey. Make your reservation today and discover why we're the city's premier dining destination.
      </p>
      <a 
        href="/reservations" 
        class="inline-block bg-orange-500 text-white px-8 py-3 rounded-full hover:bg-orange-600 transition-all duration-300 hover:scale-105"
      >
        Reserve Your Table
      </a>
    </div>
  </section>
</Layout>

<style>
  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .animate-fadeDown {
    animation: fadeDown 1s ease-out forwards;
  }

  .animate-fadeUp {
    animation: fadeUp 1s ease-out 0.3s forwards;
  }

  .animate-fadeIn {
    animation: fadeIn 1s ease-out 0.6s forwards;
  }
</style>