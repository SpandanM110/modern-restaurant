---
interface MenuItem {
  name: string;
  description: string;
  price: number;
  svg: string;
}

const menuItems: MenuItem[] = [
  {
    name: "Grilled Salmon",
    description: "Fresh Atlantic salmon with herbs and lemon",
    price: 24.99,
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
      <!-- Plate -->
      <ellipse cx="200" cy="150" rx="150" ry="100" fill="#F7FAFC"/>
      <ellipse cx="200" cy="150" rx="140" ry="90" fill="#EDF2F7"/>
      
      <!-- Salmon -->
      <path d="M100 150 Q 200 120 300 150" fill="#F56565" />
      <path d="M100 150 Q 200 180 300 150" fill="#F56565" />
      
      <!-- Herbs -->
      <circle cx="320" cy="140" r="10" fill="#48BB78"/>
      <circle cx="80" cy="160" r="10" fill="#48BB78"/>
      <circle cx="300" cy="170" r="8" fill="#48BB78"/>
      <circle cx="100" cy="130" r="8" fill="#48BB78"/>
      
      <!-- Lemon -->
      <circle cx="150" cy="120" r="15" fill="#F6E05E"/>
    </svg>`
  },
  {
    name: "Truffle Risotto",
    description: "Creamy Arborio rice with black truffle",
    price: 22.99,
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
      <!-- Plate -->
      <ellipse cx="200" cy="150" rx="150" ry="100" fill="#F7FAFC"/>
      <ellipse cx="200" cy="150" rx="140" ry="90" fill="#EDF2F7"/>
      
      <!-- Risotto -->
      <ellipse cx="200" cy="150" rx="100" ry="60" fill="#FBD38D"/>
      
      <!-- Truffle shavings -->
      <path d="M160 130 L240 130" stroke="#2D3748" stroke-width="2"/>
      <path d="M150 140 L250 140" stroke="#2D3748" stroke-width="2"/>
      <path d="M155 150 L245 150" stroke="#2D3748" stroke-width="2"/>
      <path d="M160 160 L240 160" stroke="#2D3748" stroke-width="2"/>
      
      <!-- Herbs -->
      <circle cx="160" cy="110" r="8" fill="#48BB78"/>
      <circle cx="240" cy="110" r="8" fill="#48BB78"/>
    </svg>`
  },
  {
    name: "Beef Tenderloin",
    description: "Prime cut beef with wine reduction",
    price: 32.99,
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300">
      <!-- Plate -->
      <ellipse cx="200" cy="150" rx="150" ry="100" fill="#F7FAFC"/>
      <ellipse cx="200" cy="150" rx="140" ry="90" fill="#EDF2F7"/>
      
      <!-- Beef -->
      <path d="M120 130 Q200 100 280 130 Q200 160 120 130" fill="#C53030"/>
      
      <!-- Wine reduction -->
      <path d="M160 160 Q200 180 240 160" fill="#742A2A" opacity="0.7"/>
      <path d="M170 170 Q200 190 230 170" fill="#742A2A" opacity="0.5"/>
      
      <!-- Garnish -->
      <circle cx="140" cy="180" r="10" fill="#48BB78"/>
      <circle cx="260" cy="180" r="10" fill="#48BB78"/>
    </svg>`
  }
];
---

<div class="bg-white py-16">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-8">Popular Dishes</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {menuItems.map(item => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
          <div class="relative h-48 bg-gray-50 p-4">
            <Fragment set:html={item.svg} />
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-xl mb-2">{item.name}</h3>
            <p class="text-gray-600 mb-4">{item.description}</p>
            <div class="flex justify-between items-center">
              <span class="text-orange-500 font-semibold">${item.price.toFixed(2)}</span>
              <button class="bg-orange-500 text-white px-4 py-2 rounded-full hover:bg-orange-600 transition">
                Order Now
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>