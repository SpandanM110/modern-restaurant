<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-center">Login</h2>
    </div>
  
    <form id="loginForm" class="space-y-6">
      <div>
        <label class="block text-gray-700 mb-2" for="email">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-orange-500"
          required
        />
      </div>
  
      <div>
        <label class="block text-gray-700 mb-2" for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:border-orange-500"
          required
        />
      </div>
  
      <button
        type="submit"
        class="w-full bg-orange-500 text-white py-3 rounded-lg hover:bg-orange-600 transition"
      >
        Login
      </button>
    </form>
  
    <div class="mt-6 text-center">
      <p class="text-gray-600">Don't have an account?</p>
      <button
        id="showRegister"
        class="text-orange-500 hover:text-orange-600 font-semibold"
      >
        Register here
      </button>
    </div>
  </div>
  
  <script>
    document.getElementById('loginForm')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData.entries());
      
      try {
        // Here you would typically send this to your authentication backend
        console.log('Login attempt:', data);
        alert('Login successful!');
      } catch (error) {
        console.error('Login error:', error);
        alert('Login failed. Please try again.');
      }
    });
  
    document.getElementById('showRegister')?.addEventListener('click', () => {
      // Implement registration form toggle
      console.log('Show registration form');
    });
  </script>